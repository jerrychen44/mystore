<!--chagne to rails style-->
<section class="products-grid">
  <div class="container">
    <div class="row products-container">
      <% @product.each do |product|%>
        <% if product.id <= 3 %> <!--we only want to show most 3 product in the home page-->
          <div class="col-md-4 col-sm-6 col-xs-12 product">
            <div class="thumbnail" style="background-image: url('/assets/my_products/<%= product.image_file_name %>');">
              <div class="product-details text-center">
                <div class="align-vertical">
                  <h3><%= product.title %></h3>
                  <%= link_to root_path, class: 'btn btn-primary' do %>
                    <i class="fa fa-shopping-cart"></i> Add to cart
                  <% end %>
                  <p class="product-price"><%= number_to_currency product.price %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div><!-- /.row -->
  </div><!-- /.container -->
</section>
